<div class="container">
    <div class="main-body">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/api/productos">Home</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card" style="text-align:center">
                    <div class="card-body" style="padding-top: 80px;text-align:center">
                        <div class="d-flex flex-column align-items-center text-center" style="text-align: center;">
                            <img src="{{user.avatar}}" alt="Admin" class="rounded-circle" width="150" height="150">
                            <br>
                            <input type="button" class="btn btn-primary" style="width:150px" value="Modificar Imagen"
                                id="modifImage">
                            <form action="/api/users/editPicture" class="form-control" method="post" id="formImage"
                                enctype="multipart/form-data"
                                style="background-color:#FFFFFF;border:none;box-shadow:none;text-align:center;padding:0px;margin:0px;display:none">
                                <div class="mb-3">
                                    <input class="form-control form-control-sm" name="avatar" id="formFileSm"
                                        type="file">
                                </div>
                                <br>
                                <input type="submit" class="btn btn-primary" value="Aceptar" style="width:100px">
                            </form>
                            <div class="mt-3">
                                <h4>{{user.nombre}}</h4>
                                <p class="text-muted font-size-sm">{{user.direccion}}</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body" style="padding-top: 20px;">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre y Apellido</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.nombre}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.email}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.telefono}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Edad</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.edad}} a√±os
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.direccion}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " target="__blank" href="/api/users/edit">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>